<Window x:Class="SupermarketProject.Views.Admin.CategoryTotalPirce"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:SupermarketProject.ViewModels"
        mc:Ignorable="d"
        WindowStartupLocation="CenterScreen"
        Title="CategoryTotalPirce" Height="550" Width="800">
    <Window.DataContext>
        <local:CategoryTotalPriceVM/>
    </Window.DataContext>
    <Grid>
        <DataGrid Name="totalGrid" Margin="95,249,230,35" AutoGenerateColumns="False" ScrollViewer.VerticalScrollBarVisibility="Visible" ItemsSource="{Binding CategoryTotalPrices}" >
            <DataGrid.Columns>
                <DataGridTextColumn Header="Category name" Binding="{Binding CategoryName}" />
                <DataGridTextColumn Header="Total price" Binding="{Binding Total, StringFormat='{}{0:C}'}" Width="*" />
            </DataGrid.Columns>
        </DataGrid>
    </Grid>
</Window>
